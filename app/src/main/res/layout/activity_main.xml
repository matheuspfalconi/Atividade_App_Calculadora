<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:gravity="center_vertical|right"
        android:paddingRight="20dp"

        android:text="0"
        android:textSize="100sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:background="@color/blue">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"

            android:text="INV"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"

            android:text="RAD"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"

            android:text="sin"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"

            android:text="cos"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"

            android:text="tan"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"

            android:text="%"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"

            android:text="In"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"

            android:text="log"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"

            android:text="raiz"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"

            android:text="^"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"

            android:text="PI"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"

            android:text="e"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"

            android:text="("
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"

            android:text=")"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"

            android:text="!"
            android:textSize="18sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:text="7"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:text="8"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:text="9"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textAllCaps="false"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginLeft="1px"

            android:text="/"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textAllCaps="false"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:text="bkp"
            android:textSize="24sp"
            android:textColor="@color/blue"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:text="4"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:text="5"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:text="6"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textAllCaps="false"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginLeft="1px"

            android:text="x"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textAllCaps="false"/>

        <Button
            android:clickable="false"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:textSize="24sp"
            android:textColor="@color/black"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:text="1"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:text="2"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:text="3"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textAllCaps="false"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginLeft="1px"

            android:text="-"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textAllCaps="false"/>

        <Button
            android:clickable="false"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:textSize="24sp"
            android:textColor="@color/black"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:text="0"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:text=","
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <Button
            android:clickable="false"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:textSize="24sp"
            android:textColor="@color/black"
            android:textAllCaps="false"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:background="@color/white"

            android:text="+"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textAllCaps="false"/>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:textSize="24sp"
            android:text="="
            android:textColor="@color/black"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>